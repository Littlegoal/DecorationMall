<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pdwy.dao.ShopDao">

    <!-- Shop集合申明 -->
    <resultMap id="shopMap" type="Shop">
        <id property="shopId" column="shop_id"/>
        <result property="shopName" column="shop_name"/>
    </resultMap>

    <!--把需要查询的字段写成公用列-->
    <sql id="base_column">
        shop_id,shop_name
    </sql>

    <!-- 搜素所有未逻辑删除的Shop-->
    <select id="listAll" resultMap="shopMap">
        select
        <include refid="base_column" />
        from
        shop
    </select>

    <!-- 新增Shop -->
    <insert id="insert" parameterType="Shop">
        insert into
        shop (shop_name)
        values
        (
        #{shopName}
        )
    </insert>

    <!-- 更新Shop -->
    <update id="update"  parameterType="Shop">
        update
        shop
        set
        shop_name=#{shopName}
        where
        shop_id=#{shopId}
    </update>

    <!-- 删除Shop -->
    <delete id="delete">
        delete from
        shop
        where
        shop_id=#{shopId}
    </delete>

    <!-- 查询Shop -->
    <select id="get" resultMap="shopMap">
        select
        <include refid="base_column" />
        from
        shop
        where
        shop_id=#{shopId}
    </select>

</mapper>